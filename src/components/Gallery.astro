---
import SrefCard from './SrefCard.astro';
import type { ProcessedSref } from '../lib/types';

export interface Props {
  srefs: ProcessedSref[];
}

const { srefs } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
  {srefs.map((sref) => (
    <SrefCard
      id={sref.id}
      title={sref.title}
      description={sref.description}
      tags={sref.tags}
      coverImageUrl={sref.coverImageUrl}
      path={sref.path}
    />
  ))}
</div>

{srefs.length === 0 && (
  <div class="text-center py-12">
    <p class="text-gray-500">No srefs found. Add some to the public/data/srefs directory!</p>
  </div>
)}